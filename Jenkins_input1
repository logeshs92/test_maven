pipeline {
  agent any
  stages {
 	stage('Decide tag on Docker Hub') {
      	agent none
      	steps {
        	script {
          	userInput = input message: 'User input required',
              	parameters: [choice(name: 'npm', choices: 'no\nyes', description: 'Choose "yes" if you want to deploy this build')]
		env.npm = userInput.npm
        	}
      	    }
    	}
  stage('test') {
	steps {
		sh label: '', script: '''
		echo "${env.npm}"'''
  	  }
   	}
  }
}
