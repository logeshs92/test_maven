pipeline {
  agent any
  stages {
    stage('test') {
	steps {
		script {
                        // Show the select input modal
                       def INPUT_PARAMS = input message: 'Please Provide Parameters', ok: 'Next',
                                        parameters: [
                                        choice(name: 'NPM_INSTALL', choices: ['yes','no'].join('\n'), description: 'Please select the Environment')]
                        env.NPM_INSTALL = INPUT_PARAMS.NPM_INSTALL
                    }

		sh label: '', script: '''
		if [ env.NPM_INSTALL -eq yes ];
		then 
		echo "yes"
		else
		echo "no"
		fi'''
  	  }
   	}
  }
}
