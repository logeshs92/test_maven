pipeline {
  agent any
  stages {
    stage('test') {
	steps {
		userInput = input(id: 'userInput',    
                    message: 'Choose an environment',    
                    parameters: [
                      [$class: 'ChoiceParameterDefinition', choices: "yes\no", name: 'Env']
                           ]  
  )

		sh label: '', script: '''
		if [ userInput.Env -eq yes ];
		then 
		echo "yes"
		else
		echo "no"
		fi'''
  	  }
   	}
  }
}
